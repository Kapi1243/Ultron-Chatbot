# Environment Configuration Template for Ultron Bot
# Copy this file to .env and fill in your values

# Model Configuration
ULTRON_MODEL_PATH=ultron_model
ULTRON_BASE_MODEL_PATH=models/Mistral-7B-Instruct-v0.2

# Configuration File
ULTRON_CONFIG_PATH=config/default_config.json

# Logging
ULTRON_LOG_LEVEL=INFO
ULTRON_LOG_FILE=ultron.log

# Performance
ULTRON_ENABLE_GPU=true
ULTRON_ENABLE_4BIT=true
ULTRON_MAX_TOKENS=150

# Audio
ULTRON_ENABLE_VOICE=true
ULTRON_TTS_RATE=160
ULTRON_VOICE_PREFERENCE=male

# Conversation
ULTRON_MAX_HISTORY=10
ULTRON_SAVE_HISTORY=true
ULTRON_HISTORY_FILE=conversation_history.json

# Hugging Face (optional, for downloading models)
# HF_TOKEN=your_token_here
